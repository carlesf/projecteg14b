<!-- item?id -->
<html lang="en" op="item">
  <head>
    <meta name="referrer" content="origin">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheets" type="text/css" href="application.css">
    <link rel="shortcut icon" href="favicon.ico">
    <title> <%= @contribution.title %> | Hacker News</title>
  </head>
  
  <body>
    <center>
      <table id="hnmain" border="0" cellpadding="0" cellspacing="0" width="85%" bgcolor="#f6f6ef">
        
        <tr>
          <td bgcolor="#ff6600">
            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="padding:2px">
              <tr>
                <td style="width:18px;padding-right:4px">
                  <a href=<%= contributions_path %>>
                    <%= image_tag("y18.gif", :width => "18", :height =>"18", :style =>"border:1px white solid;") %>
                  </a>
                </td>
                <td style="line-height:12pt; height:10px;">
                  <span class="pagetop">
                    <b class="hnname">
                      <a href=<%= contributions_path %>>Hacker News</a>
                    </b>
                    <a href=<%= newest_contributions_path %>>new</a>
                    |
                    <!-- aixo caldra arreglar-ho -->
                    <a href="treads">threads</a>
                    | 
                    <b style="color:rgba(0,0,0,0.2)">past</b>
                    | 
                    <b style="color:rgba(0,0,0,0.2)">comments</b>
                    | 
                    <!-- aixo caldra arreglar-ho -->
                    <a href="ask">ask</a> 
                    | 
                    <b style="color:rgba(0,0,0,0.2)">show</b>
                    |
                    <b style="color:rgba(0,0,0,0.2)">jobs</b>
                    | 
                    <a href=<%= new_contribution_path %>>submit</a>            
                  </span>
                </td>
                <td style="text-align:right;padding-right:4px;">
                  <span class="pagetop">
                    <!-- USER, (1) = karma (?) -->
                    <a id='me' href="contributions">default</a> (1) | 
                    <a id='logout' href="contributions">logout</a>
                  </span>
                </td>
              </tr>
            </table>
          </td>
        </tr>
        <tr id="pagespace" title="" style="height:10px"></tr>
        <tr>
          <td>
            <table class="fatitem" border="0">
              <tbody>
                <tr class='athing' id=<%= @contribution.id %>>

                  <td valign="top" class="votelinks">
                    <center>

                      <a id=<%= @contribution.id %>>
                        
                        <div class='votearrow' title='upvote'>
                          <%= link_to 'aixoNoEsVeu', point_contribution_path(@contribution), method: :put, :style => "opacity:0" %>
                        </div>

                      </a>
                      
                    </center>
                  </td>
                  <td class="title">
                    <a href=<%= @contribution.id %> class="storylink"><%= @contribution.title %></a>
                  </td>
                </tr>
                
                <tr>
                  <td colspan="1"></td>
                  <td class="subtext">
                    <span class="score" id="score_<%= @contribution.id %>"><%= @contribution.points %> points</span> 
                    by
                    <!-- USER -->
                    <a href="user?id=nicoburns" class="hnuser">default</a> 
                    <span class="age">
                      <a href=<%= @contribution.id %>><%= distance_of_time_in_words(Time.now.minus_with_coercion(@contribution.created_at).round) %></a>
                    </span>
                    <span id="unv_<%= @contribution.id %>"></span> 
                    |
                    <!-- hide no tira (VOTE) -->
                    <a href="hide?id=26647981&amp;auth=8138ecc46f86f6de19fa94a2e49c6f894d05aa2f&amp;goto=news" onclick="return hidestory(event, this, 26647981)">hide</a>
                    |
                    <!-- comments no tira  -->
                    <a href=<%= @contribution.id %>>0&nbsp;comments</a>
                  </td>
                </tr>
                <tr style="height:2px"></tr>
                <tr>
                  <td colspan="1"></td>
                  <td>
                    <%= @contribution.text %>
                  </td>
                </tr>
                <tr style="height:10px"></tr>
                <tr>
                  <td colspan="2"></td>
                  <td>
                    <!-- COMMENT -->
                  </td>
                </tr>
              </tbody>
            </table>
            <br>
            <br>
            <!-- COMMENT TREE
            <table></table>
            -->
            <br>
            <br>
          </td>
        </tr>
        <tr>
          <td bgcolor="#ff6600"></td>
        </tr>
      </table>
    </center>
  </body>
  
</html>


---------------------------------
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @contribution.title %>
</p>

<p>
  <strong>Url:</strong>
  <%= @contribution.url %>
</p>

<p>
  <strong>Text:</strong>
  <%= @contribution.text %>
</p>

<%= link_to 'Edit', edit_contribution_path(@contribution) %> |
<%= link_to 'Back', contributions_path %>
