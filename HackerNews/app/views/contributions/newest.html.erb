<html lang="en" op="news">
  <head>
    <meta name="referrer" content="origin">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheets" type="text/css" href="application.css">
    <link rel="shortcut icon" href="favicon.ico">
    <link rel="alternate" type="application/rss+xml" title="RSS" href="rss">
    <title>Hacker News</title>
  </head>
  
  <body>
    <center>
      <table id="hnmain" border="0" cellpadding="0" cellspacing="0" width="85%" bgcolor="#f6f6ef">
        <tr>
          <td bgcolor="#ff6600">
            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="padding:2px">
              <tr>
                <td style="width:18px;padding-right:4px">
                  <a href=<%= contributions_path %>>
                    <%= image_tag("y18.gif", :width => "18", :height =>"18", :style =>"border:1px white solid;") %>
                  </a>
                </td>
                <td style="line-height:12pt; height:10px;">
                  <span class="pagetop">
                    <b class="hnname">
                      <a href=<%= contributions_path %>>Hacker News</a>
                    </b>
                    <span class="topsel"><a href="newest">new</a></span>
                    | 
                    <a href="front">past</a> 
                    | 
                    <a href="newcomments">comments</a> 
                    | 
                    <a href="ask">ask</a> 
                    | 
                    <a href="show">show</a> 
                    | 
                    <a href="jobs">jobs</a> 
                    | 
                    <a href=<%= new_contribution_path %>>submit</a>            
                  </span>
                </td>
                <td style="text-align:right;padding-right:4px;">
                  <span class="pagetop">
                    <!-- USER, also el (1) pa que -->
                    <a id='me' href="contributions">default</a> (1) | 
                    <a id='logout' href="contributions">logout</a>
                  </span>
                </td>
              </tr>
            </table>
          </td>
        </tr>
        <tr id="pagespace" title="" style="height:10px"></tr>
        <tr>
          <td>
            <table border="0" cellpadding="0" cellspacing="0" class="itemlist">

              <% iteration = 0 %>
              <% @contributions.each do |contribution| %>
                <% iteration += 1 %>
                <tr class='athing' id=<%= contribution.id %>>
                  <td align="right" valign="top" class="title">
                    <span class="rank"><%= iteration %></span>
                  </td>
                  <td valign="top" class="votelinks">
                    <center>

                      <a id='up_<%= contribution.id %>'>
                        
                        <div class='votearrow' title='upvote'>
                          <%= link_to 'aixoNoEsVeu', point_contribution_path(contribution), method: :put, :style => "opacity:0" %>
                        </div>

                      </a>
                      
                    </center>
                  </td>
                  <td class="title">
                    <% if (contribution.tipus == "url") %>
                      <a href=<%= contribution.url %> class="storylink"><%= contribution.title %></a>
                    <% else %>
                      <a href=<%= contribution.id %> class="storylink"><%= contribution.title %></a>
                    <% end %>
                    <span class="sitebit comhead"> 
                    (
                    <!-- aixÃ² fa que si es clica el link surten tots els "url" amb aquell link -->
                    <a href="from?site=googlesource.com">
                      <span class="sitestr">googlesource.com</span>
                    </a>
                    )
                    </span>
                  </td>
                </tr>
                <tr>
                  <td colspan="2"></td>
                  <td class="subtext">
                    <span class="score" id="score_<%= contribution.id %>"><%= contribution.points %> points</span> 
                    by
                    <!-- USER -->
                    <a href="user?id=nicoburns" class="hnuser">default</a> 
                    <span class="age">
                      <a href=<%= contribution.id %>><%= distance_of_time_in_words(Time.now.minus_with_coercion(contribution.created_at).round) %></a>
                    </span>
                    <span id="unv_<%= contribution.id %>"></span> 
                    |
                    <!-- hide no tira (VOTE) -->
                    <a href="hide?id=26647981&amp;auth=8138ecc46f86f6de19fa94a2e49c6f894d05aa2f&amp;goto=news" onclick="return hidestory(event, this, 26647981)">hide</a>
                    |
                    <a href=<%= contribution.id %>>0&nbsp;comments</a>
                  </td>
                </tr>
                <tr class="spacer" style="height:5px"></tr>
              <% end %>

              <!-- MORE
              <tr class="morespace" style="height:10px"></tr>
              <tr>
                <td colspan="2"></td>
                <td class="title">
                  <a href="news?p=2" class="morelink" rel="next">More</a>
                </td>
              </tr>
              -->
              
            </table>
          </td>
        </tr>
        <tr>
          <td bgcolor="#ff6600"></td>
          <!-- AIXO SOBRA
          <td>
            <img src="s.gif" height="10" width="0">
            <table width="100%" cellspacing="0" cellpadding="1">
              <tr>
                <td bgcolor="#ff6600"></td>
              </tr>
            </table>
            <br>
            <center>
              <span class="yclinks">
                <a href="newsguidelines.html">Guidelines</a>
                |
                <a href="newsfaq.html">FAQ</a>
                | 
                <a href="lists">Lists</a>
                | 
                <a href="https://github.com/HackerNews/API">API</a>
